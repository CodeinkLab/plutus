generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum AccessType {
  FREE
  SMALL
  MEDIUM
  LARGE
  XLARGE
  XXLARGE
}

model User {
  id           String        @id @default(ulid())
  uid          String        @unique
  email        String        @unique
  location     String
  currentplan  AccessType    @default(FREE)
  payments     Payment[]
  transactions Transaction[]
}

model Payment {
  id     String  @id @default(uuid())
  amount Float
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Transaction {
  id     String  @id @default(uuid())
  amount Float
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Plans {
  id       String @id @default(uuid())
  price    Float
  features String
}
